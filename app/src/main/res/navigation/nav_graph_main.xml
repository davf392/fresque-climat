<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.idplus.fresqueclimat.ui.home.HomeFragment"
        android:label="Fresque du Climat"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_homeFragment_to_selectParticipationFragment"
            app:destination="@id/selectParticipationFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.idplus.fresqueclimat.ui.login.LoginFragment"
        android:label="Espace Animateur"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_animAccountFragment"
            app:destination="@id/animAccountFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/animAccountFragment"
        android:name="com.idplus.fresqueclimat.ui.animator.AnimAccountFragment"
        android:label="Espace Animateur"
        tools:layout="@layout/fragment_anim_account" />

    <fragment
        android:id="@+id/selectParticipationFragment"
        android:name="com.idplus.fresqueclimat.ui.participate.SelectParticipationFragment"
        android:label="Je participe en tant que..."
        tools:layout="@layout/fragment_select_participation" />
</navigation>